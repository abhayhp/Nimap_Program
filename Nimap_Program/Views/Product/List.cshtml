@{
}



@Html.ActionLink("Add Product","Create","Product")
<br />
<br />

<table class="table table-bordered">
    <thead>
        <tr class="text-center">
            <th>Pid</th>
           
            <th>Name</th>
            <th>Price</th>
            <th>CategoryId</th>
            <th>CategoryName</th>
            <th>Action</th>
           
        </tr>

    </thead>
    @foreach (Product prod in ViewBag.ProductList)
    {
        <tr class="text-center">
            <td>@prod.Pid</td>
            
            <td>@prod.Name</td>
            <td>@prod.Price</td>
            <td>@prod.Categoryid</td>
            <td>@prod.CategoryName</td>
            <td>@Html.ActionLink("Edit","Edit",new { @pid=prod.Pid })  |
                @Html.ActionLink("Delete","Delete",new { @pid=prod.Pid })
            </td>
            
        </tr>

    }

</table>

